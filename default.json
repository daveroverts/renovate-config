{
    "extends": [
        "config:base",
        "schedule:weekly"
    ],
    "timezone": "Europe/Amsterdam",
    "packageRules": [
        {
            "groupName": "Mantine",
            "matchPackagePrefixes": [
                "@mantine/"
            ]
        },
        {
            "groupName": "Tailwind CSS",
            "matchPackageNames": [
                "tailwindcss"
            ],
            "matchPackagePrefixes": [
                "@tailwindcss/"
            ]
        },
        {
            "groupName": "Plaiceholder",
            "matchSourceUrlPrefixes": [
                "https://github.com/joe-bell/plaiceholder"
            ]
        }
    ]
}