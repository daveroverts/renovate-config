{
    "extends": [
        "config:best-practices",
        "schedule:weekly"
    ],
    "npm": {
        "extends": [
            "npm:unpublishSafe"
        ],
        "postUpdateOptions": [
            "npmDedupe"
        ]
    },
    "timezone": "Europe/Amsterdam",
    "packageRules": [
        {
            "groupName": "Mantine",
            "matchPackageNames": [
                "@mantine/**"
            ]
        },
        {
            "groupName": "Tailwind CSS",
            "matchPackageNames": [
                "tailwindcss",
                "@tailwindcss/**"
            ]
        },
        {
            "groupName": "Plaiceholder",
            "matchSourceUrls": [
                "https://github.com/joe-bell/plaiceholder"
            ]
        }
    ]
}