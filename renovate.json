{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>daveroverts/renovate-config"
    ],
    "npm": {
        "schedule": [
            "before 2am"
        ]
    },
    "packageRules": [
        {
            "matchPackageNames": [
                "renovate"
            ],
            "matchUpdateTypes": [
                "minor"
            ],
            "automerge": true
        },
        {
            "matchPackageNames": [
                "renovate"
            ],
            "matchUpdateTypes": [
                "major"
            ],
            "automerge": false
        }
    ]
}